@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/custom/custom-login-screen/images/img-01.png" alt="IMG">
            </div>
            <form method="post" class="login100-form validate-form">

                <span class="login100-form-title">
                    Login
                </span>

                <div class="wrap-input100">
                    <input asp-for="Input.Username" placeholder="Nome de UsuÃ¡rio" class="input100 " />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100">
                    <input asp-for="Input.Password" placeholder="Senha" class="input100 " />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Esqueceu sua
                    </span>
                    <a class="txt2" asp-page="./ForgotPassword">
                        Senha?
                    </a>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Crie sua conta
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
