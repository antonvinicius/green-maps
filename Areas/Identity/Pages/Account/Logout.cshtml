@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<div class="container">
    <div class="col-md-12">
        <header>
            <h1>@ViewData["Title"]</h1>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-link text-dark">Clique aqui para deslogar da sua conta
                            😔</button>
                    </form>
                }
                else
                {
                    <p>Você deslogou da sua conta com sucesso!</p>
                }
            }
        </header>
    </div>
</div>